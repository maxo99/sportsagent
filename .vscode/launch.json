    "version": "0.2.0",
    "configurations": [

        {
            "name": "chainlit debug - main",
            "type": "debugpy",
            "request": "launch",
            "module": "chainlit",
            "args": [
                "run",
                "${workspaceFolder}\\main.py"
            ],
            "justMyCode": true,
        },
        {
            "name": "chainlit debug (current file)",
            "type": "debugpy",
            "request": "launch",
            "module": "chainlit",
            "args": [
                "run",
                "${file}"
            ],
            "justMyCode": true,
        }
    ]
}