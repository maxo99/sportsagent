{
    "debug.internalConsoleOptions": "openOnSessionStart",
    "files.associations": {
        "justfile": "makefile",
        "Justfile": "makefile"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        ".mypy_cache": true,
        ".ruff_cache": true,
        "**/*.ruff_cache": true,
        "**/*.venv": true,
        ".files": true,
        ".chainlit/translations": true,
        ".langgraph_api": true,
        "htmlcov": true,
        ".python-version": true,
        "uv.lock": true,
        ".coverage": true,
        ".gitattributes": true,
    },
    "pylint.args": [
        "--rcfile=pyproject.toml",
        "-j",
        "--exclude=src/sportsagent/.langgraph_api,src/sportsagent/.chainlit,src/sportsagent/.venv,src/sportsagent/.files,tests/.venv,tests/.files"
    ],
    "pylint.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "data/*",
    ],
    "markdownlint.lintWorkspaceGlobs": [
        "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
        "!**/outputs/*.md",
        "!**/*.code-search",
        "!**/bower_components",
        "!**/node_modules",
        "!**/.git",
        "!**/vendor"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "ruff.configurationPreference": "filesystemFirst"
}